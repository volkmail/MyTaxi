@using MyTaxi.Models.ViewModels
@model MyTaxi.Models.ViewModels.Order
@{
    ViewData["Title"] = "Order";
}
<div class="order-body">
    <form method="POST" class="order-body__form" onkeypress="if(event.keyCode == 13) return false;">
        <input placeholder="Адрес отправки" type="text" name="source-street" class="order-body__form-inputs__input" id="suggest1">
        <input placeholder="Адрес назначения" type="text" name="destination-street" class="order-body__form-inputs__input" id="suggest2">
        <input type="button" value="Добавить адрес" id="add_input_btn" class="add_input_btn">
        <div class="order-body__form-inputs" id="list">
            <input placeholder="Выберете тариф" list="carClassNameList" name="carClassName" id="carClassName" class="order-body__form-inputs__car-type-list">
            <datalist id="carClassNameList">
                @foreach (CarClass cc in Model.carClassesToPage)
                {
                    <option>@cc.CarClassName</option>
                }
            </datalist>
        </div>
        <div class="order-body__form-output">
            <p>Сумма поездки: <output name="result_sum"></output></p>
        </div>
        <input type="submit" value="Поехали" class="order-body__form-btn-go">
    </form>
    <div class="order-body__ymap">
        <div class="order-body__ymap__header">
            <h2>Маршрут поездки</h2>
        </div>
        <div class="order-body__ymap__map" id="map"></div>
        <button class="create_route_btn" id="create_route"><p>Построить маршрут и расчитать стоимость поездки</p></button>
    </div>
</div>
@section Scripts{
    <script src="https://api-maps.yandex.ru/2.1/?apikey=a969108c-0581-4865-bc8b-54dd2d43832c&lang=ru_RU"
            type="text/javascript">
    </script>
    <script src="~/js/ymap-settings.js" type="text/javascript"></script>
}