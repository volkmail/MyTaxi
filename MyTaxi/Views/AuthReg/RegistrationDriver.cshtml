@using MyTaxi.Models.ViewModels
@model DriverRegistrationInit
@{
    ViewData["Title"] = "RegDriver";
}
@if (Model != null && Model.JustInit == false && Model.Success == true)
{
    <div class="suc-conteiner">
        <div class="suc-conteiner__block">
            <h2>Вы успешно прошли регистрацию!</h2>
            <p>Просто авторизируйтесь под вашей учетной записью</p>
            <a href="/AuthReg/Authorization" class="suc-conteiner__block__btn">OK</a>
        </div>
    </div>
}
<div class="f-c">
        <div class="f-c__i-b">
            <h2>Регистрация водителя в сервисе заказа такси "MyTaxi"</h2>
            <p>
                Пожалуйста заполните все пустые поля и выберете в выпадающих списках нужные вам значения,
                иначе они будут приняты <b>по умолчанию!</b>
            </p>
        </div>

         <form method="POST" action="" onsubmit="return validation();" class="f-c__form">
            <div class="f-c__form__inputs-driver">
                <div class="f-c__form__inputs-driver__input">
                    <input type="text" name="login" id="loginField" class="f-c__form__inputs-driver__input-field" required maxlength="20">
                    <label class="f-c__form__inputs-driver__input-label">Логин</label>
                </div>

                <div class="f-c__form__inputs-driver__input">
                    <input type="password" name="password" id="passwordField" class="f-c__form__inputs-driver__input-field" required>
                    <label class="f-c__form__inputs-driver__input-label">Пароль</label>
                </div>

                <div class="f-c__form__inputs-driver__input">
                    <input type="password" name="passwordAgain" id="passwordFieldAgain" class="f-c__form__inputs-driver__input-field" required>
                    <label class="f-c__form__inputs-driver__input-label">Подтверждение пароля</label>
                </div>

                <div class="f-c__form__inputs-driver__input">
                    <input type="text" name="driverSurname" id="userSurname" class="f-c__form__inputs-driver__input-field" required maxlength="20">
                    <label class="f-c__form__inputs-driver__input-label">Фамилия</label>
                </div>

                <div class="f-c__form__inputs-driver__input">
                    <input type="text" name="driverName" id="userName" class="f-c__form__inputs-driver__input-field" required maxlength="20">
                    <label class="f-c__form__inputs-driver__input-label">Имя </label>
                </div>

                <div class="f-c__form__inputs-driver__input">
                    <input type="text" name="driverPatronymic" id="userPatronymic" class="f-c__form__inputs-driver__input-field" required maxlength="20">
                    <label class="f-c__form__inputs-driver__input-label">Отчество</label>
                </div>

                <div class="f-c__form__inputs-driver__input">
                    <input type="text" name="driverPhone" id="phoneNumber" class="f-c__form__inputs-driver__input-field" required>
                    <label class="f-c__form__inputs-driver__input-label">Номер телефона</label>
                </div>
            </div>
            <div class="f-c__form__inputs-car">
                <div class="f-c__form__inputs-car__input">
                    <input type="text" name="carNumber" id="carNumber" class="f-c__form__inputs-car__input-field" required>
                    <label class="f-c__form__inputs-car__input-label">Номер машины</label>
                </div>

                <div class="f-c__form__inputs-car__input">
                    <input type="text" name="carMark" id="carMark" class="f-c__form__inputs-car__input-field" required maxlength="20">
                    <label class="f-c__form__inputs-car__input-label">Марка</label>
                </div>

                <div class="f-c__form__inputs-car__input">
                    <input type="text" name="carModel" id="carModel" class="f-c__form__inputs-car__input-field" required maxlength="20">
                    <label class="f-c__form__inputs-car__input-label">Модель</label>
                </div>

                <div class="f-c__form__inputs-car__input">
                    <label class="f-c__form__inputs-car__input-label-list">Выберете класс авто</label>
                    <input list="carClassNameList" name="carClass" id="carClass" class="f-c__form__inputs-car__input-field-list" required>
                    <datalist id="carClassNameList">
                        @foreach (CarClass cc in Model.CarClasses)
                        {
                            <option>@cc.CarClassName</option>
                        }
                    </datalist>
                </div>

                <div class="f-c__form__inputs-car__input">
                    <label class="f-c__form__inputs-car__input-label-list">Выберете цвет авто</label>
                    <input list="carColorNameList" name="carColor" id="carColor" class="f-c__form__inputs-car__input-field-list" required>
                    <datalist id="carColorNameList">
                        @foreach (CarColor cc in Model.CarColors)
                        {
                            <option>@cc.CarColorName</option>
                        }
                    </datalist>
                </div>
                @if (ViewData["ExistLogin"] != null)
                {
                    <div>
                        <h3>@ViewData["ExistLogin"]</h3>
                    </div>
                }
                <input type="submit" value="Зарегестрироваться" class="f-c__form__inputs-car__input-btn">
            </div>
        </form>
</div>

@section Scripts {
<script src="https://code.jquery.com/jquery-1.12.4.min.js"
        integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
        crossorigin="anonymous">
</script>
<script src="~/js/jquery.maskedinput.js"></script>
<script src="~/js/validation.js"></script>
}